#!/bin/sh

if [[ "$1" == *\/* ]]; then
	SNAME=$(echo $1 | awk -F"/" '{ for (i = NF; i > 0; i = i - 1) printf("%s ", $i); printf("\n") }' | awk '{print $1}')
	IMG=$(find ~ -name "${SNAME}")
else
	IMG=$(find ~ -name "$1")
fi &&

echo "preload = ${IMG}" > ~/.config/hypr/hyprpaper.conf
echo "wallpaper = $(hyprctl monitors | head -n 1 | awk '{print $2}'),${IMG}" >> ~/.config/hypr/hyprpaper.conf

exec hyprpaper 1>/dev/null &
